{
    "$schema": "https://raw.githubusercontent.com/reVISit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "Graphical Urgency Assessment",
        "version": "pilot",
        "authors": [
            "The reVISit Team"
        ],
        "date": "2023-04-14",
        "description": "This study aims to evaluate how different visual representations of test results influence perceived urgency. Based on the study design by Zikmund-Fisher et al., 2016 Graphics help patients distinguish between urgent and non-urgent deviations in laboratory test results. Responses are collected through a series of image-based questions.",
        "organizations": [
            "University of Utah",
            "WPI",
            "University of Toronto"
        ]
    },
    "uiConfig": {
        "contactEmail": "urgency@test.com",
        "helpTextPath": "urgency-assessment/help.md",
        "logoPath": "assets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": true
    },
